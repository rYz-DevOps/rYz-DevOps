apiVersion: batch/v1
kind: Job
metadata:
  name: one-time-job
  annotations:
    argocd.argoproj.io/hook: PostSync 
    argocd.argoproj.io/hook-delete-policy: HookSucceeded
spec:
  template:
    spec:
      containers:
        - name: my-container
          image: busybox
          command: ["echo", "Hello, world!"]
      restartPolicy: Never
